<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/graph_layout"
    android:orientation="vertical">


    <TextView
        android:id="@+id/graph_heading"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/graph_heading_textSize"
        android:gravity="center">
    </TextView>

    <com.db.chart.view.LineChartView
        xmlns:chart="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linechart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/graph_stock_symbol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/graph_info_textSize">
        </TextView>

        <TextView
            android:id="@+id/graph_stock_min"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/graph_info_textSize">
        </TextView>

        <TextView
            android:id="@+id/graph_stock_max"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/graph_info_textSize">
        </TextView>

        <TextView
            android:id="@+id/graph_stock_avg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/graph_info_textSize">
        </TextView>

    </LinearLayout>


</LinearLayout>